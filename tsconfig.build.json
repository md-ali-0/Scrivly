{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "importHelpers": true,
    "module": "ESNext",
    "target": "ES2017"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app/**/*",
    "**/*.test.*",
    "**/*.stories.*"
  ]
}